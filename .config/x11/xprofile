while xsetroot -name "$(date | sed 's/^/ /')"
do
        sleep 1
done & # For displaying the date on the dmenu bar

taralli &			# For wrapping screens
dunst &				# For displaying notifications
picom -b &			# Compositor for transparency
chooseBg &			# Local script for changing the background
unclutter &			# For hidding mouse when not used

./fixScreens.sh 2> /dev/null	# Script for fixing refresh rate, probably not present

setxkbmap dk &			# For using a danish keyboard layout
xset r rate 300 50 &		# For speeding up keyboard presses
(sleep 3; xmodmap ${XDG_DATA_HOME:-$HOME/.local/share}/ttymaps.kmap 2>/dev/null) & # For switching caps and escape

